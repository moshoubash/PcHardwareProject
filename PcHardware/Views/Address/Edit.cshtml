@model PcHardware.Models.Address
@{
    ViewData["Title"] = "Edit Address";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>


<form method="post">
    @*Country*@
    <div class="col-md-12 form-group">
        <label for="country" class="form-label">Country</label>
        <select class="form-select" id="country" name="Country" required="">
            @{
                foreach (var c in ViewBag.Countries)
                {
                    <option value="@c.Value">@c.Text</option>
                }
            }
        </select>
    </div>

    @*City*@
    <div class="form-group">
        <label class="form-label">City</label>
        <input name="City" class="form-control" type="text" value="@Model.City" />
    </div>

    @*State*@
    <div class="form-group">
        <label class="form-label">State</label>
        <input name="State" class="form-control" type="text" value="@Model.State" />
    </div>

    @*Street*@
    <div class="form-group">
        <label class="form-label">Street</label>
        <input name="Street" class="form-control" type="text" value="@Model.Street" />
    </div>

    @*Postal code*@
    <div class="form-group">
        <label class="form-label">Postal code</label>
        <input name="PostalCode" class="form-control" type="number" value="@Model.PostalCode" />
    </div>

    <br />
    <input name="UserId" type="hidden" value="@Model.UserId" />
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>