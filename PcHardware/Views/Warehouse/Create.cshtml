@{
    ViewData["Title"] = "Create Warehouse";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="my-3">Warehouse Information</h2>

<form method="post" action="/Warehouse/Create">
    <div class="form-group">
        <label class="form-label">Warehouse Name : </label>
        <input type="text" class="form-control" name="Name" required/>
    </div>

    <div class="form-group">
        <label class="form-label">Warehouse Manager : </label>
        <input type="text" class="form-control" name="WarehouseManagerName" required/>
    </div>

    <hr class="my-2"/>

    <h3 class="mb-2">Address Information</h3>

    <div class="row form-group">
        @* Country *@
        <div class="form-group col">
            <label for="country" class="form-label">Country</label>
            <select class="form-select" id="country" name="Country" required="">
                @{
                    foreach (var c in ViewBag.Countries)
                    {
                        <option value="@c.Value">@c.Text</option>
                    }
                }
            </select>
        </div>

        @* City *@
        <div class="form-group col">
            <label class="form-label">City</label>
            <input name="City" class="form-control" type="text" placeholder="City" />
        </div>

        @* State *@
        <div class="form-group col">
            <label class="form-label">State</label>
            <input name="State" class="form-control" type="text" placeholder="State" />
        </div>
   </div>

    <div class="row form-group">
        @* Street *@
        <div class="form-group col-md-9">
            <label class="form-label">Street</label>
            <input name="Street" class="form-control" type="text" placeholder="Street" />
        </div>

        @* Postal code *@
        <div class="form-group col-md-3">
            <label class="form-label">Postal code</label>
            <input name="PostalCode" class="form-control" type="number" placeholder="ex. 21111" />
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>