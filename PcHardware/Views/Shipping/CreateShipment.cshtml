@model PcHardware.Models.ShippingRequest
@{
    ViewData["Title"] = "Create Shipping Request";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}
<img src="https://logos-world.net/wp-content/uploads/2020/04/FedEx-Logo.png" width="150px" />
<form method="post">
    <div class="form-group">
        <label class="form-label">Service Type</label>
        <input type="text" class="form-control" name="ServiceType" />
    </div>
    <div class="form-group">
        <label class="form-label">Packaging Type</label>
        <input type="text" class="form-control" name="PackagingType" />
    </div>
    <hr />
    <h3>Shipper Information</h3>
    
    <div class="form-group">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="ShipperName" />
    </div>
    <div class="form-group">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" name="ShipperAddress" />
    </div>
    <div class="form-group">
        <label class="form-label">City</label>
        <input type="text" class="form-control" name="ShipperCity" />
    </div>
    <div class="form-group">
        <label class="form-label">State</label>
        <input type="text" class="form-control" name="ShipperState" />
    </div>
    <div class="form-group">
        <label class="form-label">Postal Code</label>
        <input type="text" class="form-control" name="ShipperPostalCode" />
    </div>
    <div class="form-group">
        <label class="form-label">Country Code</label>
        <input type="text" class="form-control" name="ShipperCountryCode" />
    </div>
    <hr />
    <h3>Recipient Information</h3>
    
    <div class="form-group">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="RecipientName" />
    </div>
    <div class="form-group">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" name="RecipientAddress" />
    </div>
    <div class="form-group">
        <label class="form-label">City</label>
        <input type="text" class="form-control" name="RecipientCity" />
    </div>
    <div class="form-group">
        <label class="form-label">State</label>
        <input type="text" class="form-control" name="RecipientState" />
    </div>
    <div class="form-group">
        <label class="form-label">Postal Code</label>
        <input type="text" class="form-control" name="RecipientPostalCode" />
    </div>
    <div class="form-group">
        <label class="form-label">Country Code</label>
        <input type="text" class="form-control" name="RecipientCountryCode" />
    </div>
    <hr />
    <h3>Package Information</h3>
    
    <div class="form-group">
        <label class="form-label">Weight</label>
        <input type="text" class="form-control" name="PackageWeight" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create Shipment</button>
    </div>
</form>
